# Production Environment Configuration
# Copy this to .env and fill in your production values

# Database (Production PostgreSQL)
DATABASE_URL="postgresql://postgres:SECURE_PASSWORD@postgres:5432/relas"

# NextAuth.js (Production)
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-secure-random-string-at-least-32-characters-long"

# Google OAuth (Production keys from Google Cloud Console)
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"

# Stripe (Production keys from Stripe Dashboard)
STRIPE_SECRET_KEY="sk_live_your-live-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-production-webhook-secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_your-live-publishable-key"
NEXT_PUBLIC_SUBSCRIPTION_PRICE_ID="price_your-live-price-id"

# Twilio (Production keys from Twilio Console)
TWILIO_ACCOUNT_SID="AC..." # Must start with AC
TWILIO_AUTH_TOKEN="your-production-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890" # Your verified Twilio number
TWILIO_WHATSAPP_NUMBER="whatsapp:+14155238886" # Twilio Sandbox or approved number

# OpenAI (Production key from OpenAI Platform)
OPENAI_API_KEY="sk-your-production-openai-api-key"

# PostgreSQL Container Configuration
POSTGRES_DB="relas"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="CHANGE_THIS_TO_A_SECURE_PASSWORD"